import random

length = input("How long do you want your password to be? ")

#password = ''
#password_2 = ''
password_3 = ''

lowercase_letters = 'abcdefghijklmnopqrstuvwxyz'

uppercase_letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'

special_characters = '123456890!@#$%^&*'

for i in range(int(length)):
	random_character = random.choice(lowercase_letters + uppercase_letters + special_characters)
	password_3 = password_3 + random_character

print(password_3)
